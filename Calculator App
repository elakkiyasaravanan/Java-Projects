package App;

import java.util.Scanner;

public class CalculatorApp {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        char operator;
        double num1, num2, result;

        System.out.println("üßÆ Welcome to Java Console Calculator");

        while (true) {
            System.out.println("\nEnter first number:");
            num1 = scanner.nextDouble();

            System.out.println("Enter operator (+, -, *, /):");
            operator = scanner.next().charAt(0);

            System.out.println("Enter second number:");
            num2 = scanner.nextDouble();

            switch (operator) {
                case '+':
                    result = num1 + num2;
                    break;

                case '-':
                    result = num1 - num2;
                    break;

                case '*':
                    result = num1 * num2;
                    break;

                case '/':
                    if (num2 != 0)
                        result = num1 / num2;
                    else {
                        System.out.println("‚ö†Ô∏è Cannot divide by zero!");
                        continue;
                    }
                    break;

                default:
                    System.out.println("‚ùå Invalid operator!");
                    continue;
            }

            System.out.println("‚úÖ Result: " + result);

            // Ask to continue
            System.out.println("\nDo you want to continue? (yes/no)");
            String choice = scanner.next();
            if (!choice.equalsIgnoreCase("yes")) {
                System.out.println("üëã Exiting Calculator. Goodbye!");
                break;
            }
        }

        scanner.close();
    }
}
